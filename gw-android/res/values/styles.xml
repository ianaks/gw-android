<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FullScreenTheme">
	  <item name="android:windowFullscreen">true</item>
	  <item name="android:windowNoTitle">true</item>
	</style>
	
    <style name="EditTextAnswers">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/frame</item>	
        <item name="android:editable">false</item>		
	 </style>
	 
    <style name="TextViewListItem">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">5dp</item>	
        <item name="android:gravity">center_horizontal</item>
	 </style>
	 
    <style name="BlueTextView" parent="TextViewListItem">
        <item name="android:textColor">#87dfff</item>
    </style>
    
    <style name="RedTextView" parent="TextViewListItem">
        <item name="android:textColor">#ff0000</item>
    </style>

</resources>
